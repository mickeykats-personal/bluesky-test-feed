# Server configuration
FEEDGEN_PORT=3000
FEEDGEN_HOSTNAME="example.com"

# Your Bluesky handle and app password for publishing the feed
FEEDGEN_PUBLISHER_DID="did:plc:your-did-here"

# Service DID - usually the same as your hostname
FEEDGEN_SERVICE_DID="did:web:example.com"

# Database location
FEEDGEN_SQLITE_LOCATION="./feed.db"

# Subscription settings
FEEDGEN_SUBSCRIPTION_ENDPOINT="wss://bsky.network"
FEEDGEN_SUBSCRIPTION_RECONNECT_DELAY=3000
